Algoritmo sin_titulo
	Definir muestra,matriz Como Caracter
	Definir genZ Como Logico
	Definir contador,n Como Entero
	muestra= "CACBCACAC"
	genZ=Verdadero
	contador=0
	
//Muestras:
//	CACBCACAC
//	CDDACCACCACAAABC
//	BCBBABBACBBBBCBB
//	ADDDABBDD
//	
//	BCAADCCBABCCBABB
//	
	//	
	
	Segun Longitud(muestra) Hacer
		9:
			n=3
			Dimension matriz[n,n]
			llenarMatriz(matriz,muestra,contador,n)
			basesIguales(matriz,n,genZ)
		16:
			n=4
			Dimension matriz[n,n]
			llenarMatriz(matriz,muestra,contador,n)
			basesIguales(matriz,n,genZ)
		1369:
			n=37
			Dimension matriz[n,n]
			llenarMatriz(matriz,muestra,contador,n)
			basesIguales(matriz,n,genZ)
		De Otro Modo:
			genZ=Falso
	FinSegun
	
	
	si genZ Entonces
		Escribir "Se ha detectado el genZ"
		imprimirMatriz(matriz,n)
	SiNo
		Escribir "No se ha detectado el genZ"
		imprimirMatriz(matriz,n)
	FinSi
FinAlgoritmo

SubProceso llenarMatriz(matriz,muestra,contador,n)
	Definir i,j Como Entero
	Para i=0 hasta n-1 Hacer
		para j=0 Hasta n-1 Hacer
			matriz[i,j]=Subcadena(muestra,contador,contador)
			contador=contador+1
		FinPara
	FinPara
FinSubProceso

SubProceso imprimirMatriz(matriz,n)
	Definir i,j Como Entero
	Para i=0 Hasta n-1 Hacer
		para j=0 Hasta n-1 Hacer
			Escribir Sin Saltar matriz[i,j] " "
		FinPara
		Escribir ""
	FinPara
FinSubProceso

SubProceso basesIguales(matriz,n,genZ Por Referencia)
	Definir i,j Como Entero
	Definir base Como Caracter
	base=matriz[0,0]
	Para i=0 Hasta n-1 Hacer
		para j=0 Hasta n-1 Hacer
			si i=j Entonces
				si base<>matriz[i,j] Entonces
					genZ=Falso
					j=n-1
					i=n-1
				FinSi
			FinSi
		FinPara
	FinPara
	base=matriz[0,n-1]
	Para i=0 Hasta n-1 Hacer
		para j=0 Hasta n-1 Hacer
			si i=j Entonces
				si base<>matriz[i,n-j-1] Entonces
					genZ=Falso
					j=n-1
					i=n-1
				FinSi
			FinSi
		FinPara
	FinPara
FinSubProceso
	